# AWS Configuration Template
# Copy this file to .env and fill in your actual credentials

# AWS Credentials
# Get these from AWS Console → IAM → Users → Security Credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# Model Configuration
# Available models:
# - anthropic.claude-3-sonnet-20240229-v1:0 (recommended, balanced)
# - anthropic.claude-3-haiku-20240307-v1:0 (faster, cheaper)
# - anthropic.claude-3-opus-20240229-v1:0 (most capable, expensive)
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Generation Parameters
MAX_TOKENS=4096
TEMPERATURE=0.7
QUALITY_THRESHOLD=0.8

# Output Configuration
OUTPUT_DIRECTORY=./generated_content
OUTPUT_FORMAT=markdown
